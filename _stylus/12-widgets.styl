// Block Widgets
// ---------------

.wp-block-archives-list
.wp-block-archives-dropdown
.wp-block-calendar
.wp-block-categories
.wp-block-latest-comments
.wp-block-latest-posts
.wp-block-search
.wp-block-tag-cloud
.wp-block-rss
	margin-top var(--spacer-sm) !important
	margin-bottom var(--spacer-sm) !important

// Calendar

.wp-block-calendar
	caption
		margin-bottom 1rem
	.wp-calendar-nav
		margin-top 1rem
		display flex
		justify-content space-between

// Comments

.wp-block-latest-comments
	footer
		display block
		position relative
		top auto
		left auto
		right auto
		bottom auto
		margin 0
		pointer-events auto
		white-space normal
		opacity 1 !important

// Search

.wp-block-search
	.wp-block-search__input
		border 4px solid currentColor
		border-radius 4px
	.wp-block-search__button
		margin-top 2px
		margin-bottom 2px

// Tags

.wp-block-tag-cloud a
	display inline-block
	text-decoration none
	font-family var(--buttons-font)
	font-weight var(--heading-font-weight)
	font-size var(--xs-font-size) !important
	text-transform uppercase
	line-height 1.5
	padding .5rem 1rem
	border-radius 50px
	margin-bottom .5rem
	border 3px solid var(--text-color)
	opacity .5
	transition color .5s, opacity .5s, background-color .5s
	&:hover
		opacity 1
		color var(--bg-color)
		background-color var(--text-color)
	&:not(:last-child)
		margin-right .5rem
