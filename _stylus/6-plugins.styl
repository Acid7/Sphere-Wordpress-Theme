
// -----------
// Flickity
// -----------

// Arrows

.flickity-button
	color var(--text-color)
	width var(--button-size)
	height var(--button-size)
	padding 0
	outline none
	background none
	border 3px solid var(--text-color)
	border-radius 50%
	box-sizing content-box
	transition opacity .5s, background .4s, border-color .4s
	&::before
		font-family 'theme-icons'
		font-size var(--h5-font-size)
		{transition-color}
	&:hover
		background var(--text-color)
		&::before
			color var(--bg-color)
	&:disabled
		opacity .3

button.flickity-prev-next-button
	position fixed
	svg
		display none
	&.previous
		left var(--horizontal-rim)
		&::before
			content '\f007'
			margin-right .15em
	&.next
		right var(--horizontal-rim)
		margin-right var(--scrollbar-gap)
		&::before
			content '\f006'
			margin-left .15em




// Flickity Progress

#flickity-progress
	position fixed
	left 50%
	bottom calc(var(--vertical-rim) + calc(var(--footer-height) / 2))
	transform translateX(-50%) translateY(50%)
	font-family var(--buttons-font)
	font-weight var(--buttons-font-weight)
	font-size 1rem
	display flex
	align-items center
	.current-slide
	.total-slides
		width 4rem
		display flex
		align-items center
		justify-content center
		{transition-color}
	.line-wrapper
		width var(--xxl-font-size)
		position relative

#progress-line
	display block
	border-radius 5px
	background-color var(--text-color)
	transition background-color .5s
	height 4px
	width 0
	&::before
		content ''
		position absolute
		left 0
		right 0
		top 50%
		height 2px
		margin-top -1px
		border-radius 3px
		background-color var(--text-color)
		transition background-color .5s
		opacity .3




// Testimonials

.testimonials-slider
	.flickity-viewport
		overflow visible
		will-change height
		transition height .5s
	.testimonials-item
		width 100%
		blockquote
			margin 0
		cite
			display flex
			align-items center
			margin-bottom -1.5em
			&::before
				display none
		.testimonials-image
			width 3.5rem
			height 3.5rem
			border-radius 50%
			margin-right 1rem
			margin-bottom -.5em
			& + .testimonials-author
				margin-bottom -.5em
		.testimonials-author
			color var(--post-meta-color)

	.flickity-page-dots
		bottom -.4rem
		.dot
			width .5rem
			height .5rem
			background var(--text-color)
			margin 0 .5rem
			padding-left 0
			&::before
				display none




// Contact Form 7

div.wpcf7
	margin-top 3rem
	.wpcf7-form-control-wrap
		display inline-block
		width 100%
		&:not(:first-child)
			margin-top 2.5rem
		textarea
			margin-top 0rem
	.wpcf7-form p
		&:first-of-type
			margin-top 0
		&:last-of-type
			margin-bottom 0
	button
		margin-top 2.5rem !important
		margin-bottom 0 !important
	.ajax-loader
		display none

span.wpcf7-list-item
	margin 0 1.5em 0 0

span.wpcf7-not-valid-tip
	position absolute
	font-family var(--heading-font)
	font-weight var(--heading-font-weight)
	color var(--text-color)
	text-transform uppercase
	padding-left 1.8em
	font-size 1rem

div.wpcf7-response-output
	margin-bottom 0
	text-align center
	border 4px solid var(--text-color) !important
	font-family var(--heading-font)
	font-weight var(--heading-font-weight)
	text-transform uppercase
