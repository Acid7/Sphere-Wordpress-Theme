
// Reveal Effects

[class*="reveal-"]
	visibility hidden
	will-change opacity, transform

// Text Effects

.reveal-text-fx
	.word
		display inline-block
		vertical-align bottom
		white-space nowrap
		overflow hidden
	.char
		opacity 0
		display inline-block
		will-change transform, opacity
	.whitespace
		width .3em
		display inline-block
	.line .whitespace:last-child
		display none




// Post Title Wrapper

.post-title-wrapper
	.subheading
		display block
		font-family var(--subheading-font)
		font-weight var(--subheading-font-weight)
		text-transform var(--subheading-transform)
		letter-spacing var(--subheading-spacing)
	.post-meta
		color var(--post-meta-color)
		& > *:not(:last-child)::after
			content '/'
			margin-left .5em
			{transition-color}
		a
			text-decoration none
	&.size-xl
		.post-title
			font-size var(--xl-font-size)
			line-height var(--xl-line-height)
		.subheading
			font-size var(--xl-subheading)




// Post Content

.post-content
	position relative
	overflow hidden

#blog
.post-content
	padding calc(var(--vertical-rim) * 2 + var(--header-height)) var(--horizontal-rim) calc(var(--vertical-rim) * 2 + var(--footer-height))

body.page-template-without-page-header
	.post-content
		padding-top calc(var(--vertical-rim) * 2 + var(--header-height) + calc(var(--spacer-md) / 2))
		padding-bottom calc(var(--vertical-rim) * 2 + var(--footer-height) + calc(var(--spacer-md) / 2))

body.hide-footer #blog
body.hide-footer.page .post-content
	padding-bottom var(--spacer-md)

@media (max-width: 640px)
	body:not(.hide-footer) #blog
		padding-bottom var(--spacer-lg)




// Entry Content

.entry-content
	width 100%
	& >
		h1
		h2
		h3
		h4
		h5
		h6
		p
		ul
		ol
		dl
		hr
		pre
		address
		.responsive-table
			{wrapper-narrow}
		:first-child:not(.page-header):not(.post-header)
			margin-top 0 !important
		:last-child
			margin-bottom 0 !important
	&::after
		content ''
		display table
		clear both




// With Image Header

html.is-loading
	body.page-template-with-image-header
		.image-wrapper
		.page-header
			transform scale(1.05)
			opacity 0

body.page-template-with-image-header
	.image-wrapper
	.page-header
		transition transform 2s cubic-bezier(0.13, 0.28, 0, 0.91), opacity 2s cubic-bezier(0.13, 0.28, 0, 0.91)
	.image-wrapper
		position absolute
		top calc(var(--vertical-rim) * 2 + var(--header-height))
		left var(--horizontal-rim)
		right var(--horizontal-rim)
		height calc(100vh - var(--horizontal-rim) - calc(var(--vertical-rim) * 2 + var(--header-height)))
		z-index -1
		{box-shadow}
		img
			width 100%
			height 100%
			object-fit cover
	.page-header
		color var(--bg-color)
		margin-top var(--spacer-lg)




// Page Comments

body.page #comments
	height auto



// Error 404

body.error404 .entry-content h1 + h2
	margin-top calc(var(--spacer-md) / 2)
