
// --------
// Forms
// --------

.form-columns
	display flex
	justify-content space-between
	div
		margin-bottom 2.5rem
		width calc(50% - 1.25rem)

:focus
	outline none
	&::placeholder
		opacity .3

::placeholder
	{transition-opacity}

form
	{wrapper}
	.button
	button
	input[type=submit]
		border-width 4px
		font-weight var(--heading-font-weight)
		font-size var(--body-font-size)
		padding 1.1rem 2.5rem

fieldset
	{wrapper-narrow}
	border 1px solid currentColor
	padding 0 2rem
	legend
		text-align center
		padding 0 1rem

label
legend
	font-family var(--buttons-font)
	line-height var(--h6-line-height)
	text-transform uppercase

label
	font-weight var(--buttons-font-weight)

input
select
textarea
	font-family var(--buttons-font)
	font-weight var(--buttons-font-weight)
	font-size var(--body-font-size)
	line-height 1.5rem
	color currentColor
	width 100%
	border-radius 0
	appearance none
	background none
	border none
	padding 1rem 1.5rem
	border 4px solid currentColor
	border-radius 4px

textarea
	line-height var(--body-line-height)
	vertical-align top
	resize none

select
	color currentColor
	text-overflow ellipsis
	overflow hidden





// Checkbox & Radio

input[type="checkbox"]
input[type="radio"]
	display none
	& + label
	& + .wpcf7-list-item-label
		font-family var(--buttons-font)
		font-weight var(--buttons-font-weight)
		font-size var(--body-font-size)
		line-height 1.75rem
		text-transform none
		position relative
		user-select none
		display inline-block
		padding-left 2.5rem
		&:hover
			cursor pointer
		&::before
			position absolute
			left 0
			content ''
			display inline-block
			vertical-align middle
			width 1.75rem
			height 1.75rem
			border 4px solid currentColor
			border-radius 2px
			box-shadow none
	&:checked + label
	&:checked + .wpcf7-list-item-label
		&::before
			background-color currentColor


//

input[type="search"]
	appearance none
	&::-webkit-search-decoration
		display none




// Default Placeholder Colors

::-webkit-input-placeholder // WebKit, Blink, Edge
	color currentColor
	opacity 1

:-moz-placeholder // Mozilla Firefox 4 to 18
	color currentColor
	opacity 1

::-moz-placeholder // Mozilla Firefox 19+
	color currentColor
	opacity 1

:-ms-input-placeholder // Internet Explorer 10-11
	color currentColor

// Hide Search Clear Icon

input::-webkit-search-cancel-button
	display none

// Hide Webkit Autofill Icons

input::-webkit-credentials-auto-fill-button
input::-webkit-contacts-auto-fill-button
	visibility hidden
	display none !important
	pointer-events none
	position absolute
	right 0

// Autofill Background & Border Color

input:-webkit-autofill,
textarea:-webkit-autofill {
    transition: background-color 5000s ease-in-out 0s;
    -webkit-text-fill-color: currentColor !important;
	border-color: var(--border-color) !important
}





// Multiselect

select[multiple]
	padding 1rem 1.5rem

// ----------------
// Styled Select
// ----------------

.styled-select
	display block
	width 100%
	max-width 100%
	box-sizing border-box
	margin 0
	appearance none
	text-overflow ellipsis
	overflow hidden
	position relative
	select
		padding-right 3rem
		&:hover
			cursor pointer
	option
		font-weight normal
	&::after
		position absolute
		top 50%
		right 1.5rem
		transform translateY(-50%)
		font-family 'theme-icons'
		content '\f004'
		font-size calc(var(--body-font-size) * 1.333)
		pointer-events none
	&::-ms-expand
		display none
	&:focus
		outline none

*[dir="rtl"]
:root:lang(ar)
:root:lang(iw)
	.styled-select
		select
			padding-left 3rem
			padding-right 1.5rem
		&::after
			right auto
			left 1.5rem

.styled-select
	&:disabled
	&[aria-disabled=true]
		opacity .5
	&:disabled:hover
		cursor not-allowed






// --------------
// Input Range
// --------------

input[type=range]
	-webkit-appearance none
	width 100%
	background none
	border 0
	padding 0
	&:focus
		outline none

	&::-webkit-slider-runnable-track
		width 100%
		height 4px
		border-radius 4px
		cursor pointer
		background currentColor

	&::-webkit-slider-thumb
		height 1.25rem
		width 1.25rem
		border-radius 50%
		background currentColor
		cursor pointer
		-webkit-appearance none
		margin-top -.5rem

	&:focus::-webkit-slider-runnable-track
		background currentColor

	&::-moz-range-track
		width 100%
		height 4px
		border-radius 4px
		cursor pointer
		background currentColor
		border-radius 3px

	&::-moz-range-thumb
		height 1rem
		width 1rem
		border-radius 50%
		background currentColor
		cursor pointer
		border 0

	&::-ms-track
		width 100%
		height 4px
		border-radius 4px
		cursor pointer
		background transparent
		border-color transparent
		border-width 1rem 0
		color transparent

	&::-ms-fill-lower
		background currentColor
		border-radius 50%

	&::-ms-fill-upper
		background currentColor
		border-radius 50%

	&::-ms-thumb
		height 1.25rem
		width 1.25rem
		border-radius 50%
		background currentColor
		cursor pointer

	&:focus::-ms-fill-lower
		background currentColor

	&:focus::-ms-fill-upper
		background currentColor
